//https://stackoverflow.com/questions/53352303/how-to-debug-a-nodemon-project-in-vscode

{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node", 
          "request": "launch",
          "name": "nodemon",
          "runtimeExecutable": "nodemon",
          "program": "${workspaceFolder}/index.js",
          "restart": true,
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "env": {
              "debug": "app:*",
          }
      }
  ]
}